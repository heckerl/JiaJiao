}
.input-group::after {
		position: absolute;
		right: 0;
		bottom: 0;
		left: 0;
		height: 1rpx;
		content: '';
		-webkit-transform: scaleY(.5);
		-ms-transform: scaleY(.5);
		    transform: scaleY(.5);
		background-color: #c8c7cc;
}
.input-row {
		display: -webkit-box;
